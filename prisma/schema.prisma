generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  provider       String?   @default("credentials")
  birthDate      DateTime?
  gender         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  role           String    @default("user")

  // Notification settings
  emailNotifications    Boolean   @default(true)
  generalNotifications  Boolean   @default(true)

  membershipStatus String?   @default("inactive") 
  planId           String?
  membershipExpiry DateTime?
  membership       Membership? @relation(fields: [planId], references: [planId], onDelete: SetNull)

  accounts Account[]
  sessions Session[]

  foodProducts FoodProduct[]
  invoices     Invoice[]
  userNutritionPlans UserNutritionPlan[]
  mealLogs     UserMealLog[]
  userQuestions UserQuestion[]
  bodyMeasurements BodyMeasurement[]
  progressPhotos   ProgressPhoto[]
  userAchievements UserAchievement[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  subject     String
  htmlContent String    @db.Text
  textContent String?   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model Membership {
  id                String   @id @default(cuid())
  name              String
  planId            String   @unique
  price             Decimal  @db.Decimal(10, 2)
  discountPercentage Int      @default(0)
  duration          Int      
  description       String?  @db.Text
  features          Json?    
  isActive          Boolean  @default(true)
  showOnHomepage    Boolean @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  users             User[]
  recipes           RecipeMembership[]
  nutritionPlans    NutritionPlan[]
  trainingPrograms  TrainingProgram[]
  workouts          Workout[]
  courses           Course[]
}

model MenuItem {
  id          String      @id @default(cuid())
  title       String
  path        String
  icon        String?
  section     String      @default("main")
  order       Int
  isActive    Boolean     @default(true)
  parentId    String?
  parent      MenuItem?   @relation("MenuItemToMenuItem", fields: [parentId], references: [id], onDelete: SetNull)
  children    MenuItem[]  @relation("MenuItemToMenuItem")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Page {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  content     String      @db.Text
  isPublished Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  createdBy   String?
  updatedBy   String?
}

model FoodProduct {
  id          String   @id @default(cuid())
  name        String
  category    String
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  fiber       Float?
  sugar       Float?
  serving     Float
  servingUnit String   @default("g")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  isUserCreated Boolean @default(false)
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  recipeIngredients RecipeIngredient[]
  mealLogItems      UserMealLogItem[]
}

model RecipeCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  image       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  recipes     Recipe[]
}

model Recipe {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  preparationTime Int?     
  cookingTime     Int?     
  servings        Int      @default(1)
  difficulty      String?  @default("medium") 
  instructions    Json     
  image           String?
  tags            Json?    
  isPublished     Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdBy       String?
  updatedBy       String?
  availableToAll  Boolean  @default(true) 

  categoryId      String?
  category        RecipeCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  totalCalories   Float?
  totalProtein    Float?
  totalCarbs      Float?
  totalFat        Float?
  totalFiber      Float?
  totalSugar      Float?

  ingredients     RecipeIngredient[]
  memberships     RecipeMembership[]
}

model RecipeIngredient {
  id            String       @id @default(cuid())
  recipeId      String
  foodProductId String
  quantity      Float
  unit          String       @default("g")
  url           String?      

  recipe        Recipe       @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  foodProduct   FoodProduct  @relation(fields: [foodProductId], references: [id], onDelete: Cascade)

  @@unique([recipeId, foodProductId])
}

model RecipeMembership {
  id           String     @id @default(cuid())
  recipeId     String
  membershipId String

  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  @@unique([recipeId, membershipId])
}

model NutritionPlan {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  benefits    String?  @db.Text
  gender      String   @default("all")
  icon        String?  @default("swimming")
  isPopular   Boolean  @default(false)
  membershipId String?
  membership  Membership? @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  imageUrl    String?  @db.Text
  videoUrl    String?  @db.Text
  isPublished Boolean  @default(false)
  days        NutritionPlanDay[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  updatedBy   String?
}

model NutritionPlanDay {
  id              String   @id @default(cuid())
  dayNumber       Int
  nutritionPlanId String
  nutritionPlan   NutritionPlan @relation(fields: [nutritionPlanId], references: [id], onDelete: Cascade)
  meals           NutritionPlanMeal[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model NutritionPlanMeal {
  id          String   @id @default(cuid())
  mealNumber  Int
  name        String
  dayId       String
  day         NutritionPlanDay @relation(fields: [dayId], references: [id], onDelete: Cascade)
  items       NutritionPlanMealItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NutritionPlanMealItem {
  id              String   @id @default(cuid())
  foodProductId   String
  foodProductName String
  quantity        Float    
  calories        Float
  protein         Float
  carbs           Float
  fat             Float
  mealId          String
  meal            NutritionPlanMeal @relation(fields: [mealId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// User's personal nutrition plan (created by user)
model UserNutritionPlan {
  id              String   @id @default(cuid())
  name            String
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Calculator data
  goal            String   // maintain, lose, gain
  activityLevel   String   // sedentary, light, moderate, active, very_active, extra_active
  gender          String   // male, female
  age             Int
  height          Float    // cm
  weight          Float    // kg

  // Calculated values
  bmr             Float    // Basal Metabolic Rate
  tdee            Float    // Total Daily Energy Expenditure
  targetCalories  Float    // Target calories based on goal

  // Optional reference to source plan
  icon            String?  // Icon from source nutrition plan (e.g., "swimming", "running")

  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  mealLogs        UserMealLog[]
}

model TrainingProgram {
  id           String   @id @default(cuid())
  name         String
  description  String?  @db.Text
  difficulty   String   @default("medium") 
  duration     Int?     
  gender       String   @default("all") 
  goal         String?  
  imageUrl     String?  @db.Text
  videoUrl     String?  @db.Text
  isPublished  Boolean  @default(false)
  membershipId String?
  membership   Membership? @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?
  updatedBy    String?

  programWorkouts ProgramWorkout[]
  programPeriods  ProgramPeriod[] 
}

model ProgramPeriod {
  id            String    @id @default(cuid())
  programId     String
  name          String
  description   String?
  startWeek     Int       @default(1)  
  endWeek       Int       @default(4)  
  order         Int
  program       TrainingProgram @relation(fields: [programId], references: [id], onDelete: Cascade)
  workouts      ProgramWorkout[]
  weeks         PeriodWeek[]    
}

model Workout {
  id                String   @id @default(cuid())
  name              String
  description       String?  @db.Text
  duration          Int?     
  difficulty        String   @default("medium") 
  targetMuscleGroups Json?    
  equipment         Json?    
  imageUrl          String?  @db.Text
  videoUrl          String?  @db.Text
  isPublished       Boolean  @default(false)
  membershipId      String?
  membership        Membership? @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?
  updatedBy         String?
  isCopy            Boolean  @default(false)  
  originalWorkoutId String?  

  programWorkouts   ProgramWorkout[]
  workoutExercises  WorkoutExercise[]
  originalWorkout   Workout?  @relation("WorkoutCopies", fields: [originalWorkoutId], references: [id], onDelete: SetNull)
  copies            Workout[] @relation("WorkoutCopies")
}

model PeriodWeek {
  id            String    @id @default(cuid())
  periodId      String
  weekNumber    Int
  isCompleted   Boolean   @default(false)
  period        ProgramPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)
  workouts      ProgramWorkout[]

  @@unique([periodId, weekNumber])
}

model ProgramWorkout {
  id              String   @id @default(cuid())
  programId       String
  workoutId       String
  periodId        String?
  weekId          String?  
  weekNumber      Int      @default(1) 
  dayNumber       Int      
  order           Int      @default(0) 

  program         TrainingProgram @relation(fields: [programId], references: [id], onDelete: Cascade)
  workout         Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  period          ProgramPeriod?  @relation(fields: [periodId], references: [id], onDelete: SetNull)
  week            PeriodWeek?     @relation(fields: [weekId], references: [id], onDelete: SetNull)

  @@unique([programId, workoutId, weekNumber, dayNumber])
}

model Exercise {
  id              String   @id @default(cuid())
  name            String
  description     String?  @db.Text
  muscleGroup     String?  
  secondaryMuscleGroups Json?    
  equipment       String?  
  difficulty      String   @default("medium") 
  instructions    Json?    
  tips            Json?    
  imageUrl        String?  @db.Text
  videoUrl        String?  @db.Text
  isPublished     Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdBy       String?
  updatedBy       String?

  workoutExercises WorkoutExercise[]
}

model WorkoutExercise {
  id              String   @id @default(cuid())
  workoutId       String
  exerciseId      String
  order           Int      @default(0)
  sets            Int?
  reps            String?  
  restTime        Int?     
  tempo           String?  
  supersetGroup   String?  
  supersetOrder   Int?     
  notes           String?  @db.Text

  workout         Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise        Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@unique([workoutId, exerciseId, supersetGroup, supersetOrder])
}

model Invoice {
  id              String   @id @default(cuid())
  userId          String
  invoiceNumber   String   @unique
  date            DateTime @default(now())
  dueDate         DateTime?
  amount          Decimal  @db.Decimal(10, 2)
  currency        String   @default("EUR")
  status          String   @default("paid") // paid, pending, overdue, cancelled
  description     String?
  membershipName  String?  // Store membership name at time of invoice
  pdfUrl          String?  // Vercel Blob URL for PDF
  pdfKey          String?  // Vercel Blob key for deletion
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// User's daily meal tracking
model UserMealLog {
  id                  String   @id @default(cuid())
  userId              String
  userNutritionPlanId String
  date                DateTime @db.Date
  mealName            String   // Pusryčiai, Pietūs, Vakarienė, Užkandis, etc.
  mealOrder           Int      @default(0) // Order of meal in day

  // Calculated totals for this meal
  totalCalories       Float    @default(0)
  totalProtein        Float    @default(0)
  totalCarbs          Float    @default(0)
  totalFat            Float    @default(0)

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userNutritionPlan   UserNutritionPlan @relation(fields: [userNutritionPlanId], references: [id], onDelete: Cascade)
  items               UserMealLogItem[]

  @@unique([userId, userNutritionPlanId, date, mealName])
}

// Individual food items in a meal log
model UserMealLogItem {
  id              String   @id @default(cuid())
  userMealLogId   String
  foodProductId   String?  // Reference to FoodProduct (null if custom entry)
  foodProductName String   // Store name for display
  quantity        Float    // Amount in grams or units
  unit            String   @default("g")

  // Nutritional values for this item (calculated based on quantity)
  calories        Float
  protein         Float
  carbs           Float
  fat             Float

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userMealLog     UserMealLog @relation(fields: [userMealLogId], references: [id], onDelete: Cascade)
  foodProduct     FoodProduct? @relation(fields: [foodProductId], references: [id])
}

// Educational Course (Mokymai)
model Course {
  id           String   @id @default(cuid())
  title        String
  description  String?  @db.Text
  about        String?  @db.Text  // Apie mokymus
  targetAudience String? @db.Text // Kam skirta
  whatYouLearn String?  @db.Text  // Ką išmoksi (JSON array)
  whatIsIncluded String? @db.Text // Kas įtraukta (JSON array)
  imageUrl     String?  @db.Text
  gender       String   @default("all") // "all", "male", "female"
  difficulty   String   @default("beginner") // "beginner", "intermediate", "advanced"
  isPublished  Boolean  @default(false)
  membershipId String?
  membership   Membership? @relation(fields: [membershipId], references: [id], onDelete: SetNull)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?
  updatedBy    String?

  lessons      CourseLesson[]
}

// Course Lesson (Video or Text content)
model CourseLesson {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  type        String   // "video" or "text"
  content     String?  @db.Text // For text lessons - HTML/markdown content
  videoUrl    String?  @db.Text // For video lessons - video URL
  duration    Int?     // Duration in minutes
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// FAQ Category
model FAQCategory {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       FAQItem[]
}

// FAQ Item (Question & Answer)
model FAQItem {
  id          String   @id @default(cuid())
  categoryId  String
  question    String   @db.Text
  answer      String   @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category    FAQCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model UserQuestion {
  id          String   @id @default(cuid())
  userId      String
  question    String   @db.Text
  status      String   @default("pending") // pending, answered, closed
  answer      String?  @db.Text
  answeredAt  DateTime?
  answeredBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Body Measurements tracking
model BodyMeasurement {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime @db.Date

  // Measurements in respective units
  weight      Float?   // kg
  shoulders   Float?   // cm (Pečiai)
  chest       Float?   // cm (Krūtinė)
  biceps      Float?   // cm (Bicepsas)
  forearm     Float?   // cm (Dilbis)
  waist       Float?   // cm (Liemuo)
  belly       Float?   // cm (Pilvas)
  hips        Float?   // cm (Klubai/sėdmenys)
  thigh       Float?   // cm (Šlaunis)
  calf        Float?   // cm (Blauzda)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

// Progress Photos tracking
model ProgressPhoto {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime @db.Date

  // Photo URLs (Vercel Blob)
  frontUrl    String?  @db.Text
  sideUrl     String?  @db.Text
  backUrl     String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

// Achievement definitions
model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique // Unique code for achievement (e.g., "centimeter_killer")
  title       String
  description String   @db.Text
  iconUrl     String?  @db.Text
  iconSvg     String?  @db.Text // Raw SVG code
  trigger     String?  // Trigger type: first_measurement, first_workout, first_photo, workout_streak_30, etc.
  triggerValue Int?    // Value for trigger (e.g., 30 for streak, 100 for total workouts)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userAchievements UserAchievement[]
}

// User's unlocked achievements
model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}